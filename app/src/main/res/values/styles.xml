<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="add_subject">
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawableStart">@drawable/ic_subject</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/darker_gray</item>
    </style>

    <style name="next_iv">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tv_dow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="wee_day_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/week_day_selector</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="sunday_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/sunday_button</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ready_button">
        <item name="android:layout_width">231dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/ready_button_selector</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="bnv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="day_holder_cardview">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="day_holder_tvday">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="day_holder_tvdate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="day_holder_arrow">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="tv_app_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_rights">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
    </style>

    <style name="tv_about">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="connection_cardview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="social_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:autoLink">web</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textColorLink">#808080</item>
    </style>

    <style name="social_iv">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="fabe" parent="fab">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="make_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="tv_right_now">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="tv_schedule">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/myriad_bold</item>
        <item name="android:textColor">#FFF200</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="iv_next">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="tv_today_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:fontFamily">@font/myriad_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>